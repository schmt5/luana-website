---
import Layout from '../../layouts/Layout.astro';
import { Image } from 'astro:assets';
import myImage from '../../img/lua-16-9.jpg';
---

<Layout title="Kleinkunstkabühne" description="">
  <section class="py-16 sm:py-20">
    <div class="mx-auto max-w-2xl px-4 sm:px-6 lg:max-w-4xl lg:px-8">
      <div class="grid gap-12 lg:grid-cols-3 lg:gap-8">
       
        <div class="lg:col-span-3">
          <Image
            src={myImage}
            alt="Lua"
            class="h-[400px] w-full rounded-3xl object-cover object-center"
            transition:name="kkk"
          />
        </div>
        <h1 class="text-3xl font-medium tracking-tight sm:text-4xl">Kleinkunstkabühne</h1>
      </div>

      <div class="mt-8">
        <h3 class="text-xl font-medium">Kleinkunstkabühne</h3>
        <p class="text-base text-primary-950/70 dark:text-primary-200/70 sm:text-lg">
          Lorem ipsum dolor sit amet consectetur adipisicing elit. Quisquam, voluptatibus.
        </p>
      </div>
    </div>
  </section>
</Layout>
